@{
  Layout = "_Layout";
}

@model HairSalon.Models.Stylist

<h4>Edit Stylist</h4>

<h4>@Html.DisplayFor(model => model.Name)</h4>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.StylistId);

    @Html.LabelFor(model => model.Name);
    @Html.EditorFor(model => model.Name);

    @Html.LabelFor(model => model.Specialty);
    @Html.EditorFor(model => model.Specialty);

    @Html.LabelFor(model => model.YearsWorked, "Years Worked");
    @Html.EditorFor(model => model.YearsWorked);

    <input type="submit" value="Save">
}

<p>@Html.ActionLink("Back to list", "Index")</p>