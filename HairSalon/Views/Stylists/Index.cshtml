@{
  Layout = "_Layout";
}

@using HairSalon.Models;

<div class="card">
  <h1 class="card-header text-center">Stylists</h1>
  <div class="card-body">
    @if (@Model.Count == 0)
    {
      <h3>No stylists have been added yet!</h3>
    }
    else
    {
      <ul class="list-group list-group-flush">
        @foreach (Stylist stylist in Model)
        {
          @Html.ActionLink($"{(stylist.Name ?? "_")}", "Details", new { id = stylist.StylistId }, new { @class = "list-group-item list-group-item-action" })
        }
      </ul>
    }
    <div class="row mt-3 justify-content-evenly">
      <div class="col-auto">
        <p>@Html.ActionLink("Add new stylist", "Create")</p>
      </div>
      <div class="col-auto">
        <p>@Html.ActionLink("Add new client to stylist", "Create", "Clients")</p>
      </div>
      <div class="col-auto">
        <p>@Html.ActionLink("Home", "Index", "Home")</p>
      </div>
    </div>
  </div>
</div>