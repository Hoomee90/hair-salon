@{
  Layout = "_Layout";
}

@model HairSalon.Models.Stylist

<h4>Add Stylist</h4>

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name);
  @Html.TextBoxFor(model => model.Name, new { @required = "" });

  @Html.LabelFor(model => model.Specialty);
  @Html.TextBoxFor(model => model.Specialty);

  @Html.LabelFor(model => model.YearsWorked, "Years worked", new { @type = "number" });
  @Html.TextBoxFor(model => model.YearsWorked, new { @type = "number" });

  <input type="submit" value="Add new stylist">
}

<p>@Html.ActionLink("Back to stylists", "Index")</p>