@{
  Layout = "_Layout";
}

@model HairSalon.Models.Client

<h4>Add Client</h4>

<p><strong>NOTE:</strong> You need to have at least one stylist before you can add a client!</p>
<p>Go to @Html.ActionLink("this page", "Create", "Stylists") to create a stylist.</p>

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name);
  @Html.TextBoxFor(model => model.Name, new { @required = "" });

  @Html.LabelFor(model => model.Stylist);
  @Html.DropDownList("StylistId");
  
  <input type="submit" value="Add new client">
}

<p>@Html.ActionLink("Back to stylists", "Index", "Stylists")</p>